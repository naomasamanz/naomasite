{
  "cleanUrls": true,
  "redirects": [
    { "source": "/admin", "destination": "/", "permanent": true },
    { "source": "/git", "destination": "https://github.com/naomasamanz/naoma-site", "permanent": false },
    { "source": "/test", "destination": "/", "permanent": false },
    { "source": "/naoma", "destination": "/403", "permanent": false },
    { 
      "source": "/en/:path*", 
      "destination": "/:path*?lang=en", 
      "permanent": false 
    }
  ],
  "headers": [
    {
      "source": "/(.*).(jpg|png|gif|ico|css|js)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
